<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="categorie.Categorie" table="CATEGORIE">
      <meta attribute="class-description">
       Class contains categories 
      </meta>
      <id name="codeCategorie" column="CODE_CATEGORIE">
         <generator class="native"/>
      </id>
      <property name="titre" column="TITRE" />
      <property name="description" column="DESCRIPTION" />
      <property name="dateAjout" column="DATE_Ajout" />
      <set name="produits" table="CAT_PROD">
      <key column="CODE_CATEGORIE"></key>
      <many-to-many class="produit.Produit" column="CODE_PRODUIT"></many-to-many>
      </set>   
   </class>
</hibernate-mapping>